doctype html
html
  include header.jade
  
  body
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') TRAD - Template for Rapid Application Development (Ran Guin)
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if session.authenticated
              li.active
                a(href='/user/show/<%= session.me.id %>')
            if (session.authenticated && session.me.admin)
              li
                a(href='/user') User Administration
              li
                a(href='#') Placeholder2
          div.navbar-right
            if (session.authenticated)
              a.btn.btn-default.navbar-btn.navbar-right(href='/session/destroy') sign-out
            if (!session.authenticated) 
              form.navbar-form.navbar-right(action='/session/create')
                div.form-group
                  input.form-control(type='text', placeholder='Email', name='email')
                div.form-group
                  input.form-control(type='password', placeholder='Password', name='password')
                button.btn.btn-success(type='submit') Sign in
                input(type='hidden', name='_csrf', value='<%= _csrf %>')
    
    script(type='text/javascript').
      window.SAILS_LOCALS = { _csrf: "#{_csrf}"};

    block content

    footer
      include footer.jade
