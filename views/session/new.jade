extends ./../emptyLayout
block content
  container
    form.form-signin(action='/session/create', method='POST')
      if session && session.flash && session.flash.err
        ul.alert.alert-danger
          each error in session.flash.err
            - var extra = JSON.stringify(error)
            li #{error['message']} : #{extra}
      p &nbsp;
      p &nbsp;
      input.form-control(type='text' placeholder="Email Address" name='email')
      p &nbsp;
      input.form-control(type='password' placeholder="Password" name='password')
      p &nbsp;
      button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign In
      input.form-control(type='hidden' value="#{_csrf}")
      hr
      
      if message
        .alert.alert-danger 
          i.fa.fa-warning 
          b &nbsp; #{message}
      if ! message
        .alert.alert-danger no message
      .jumbotron(style='padding:50px')
        h1 Custom Web Application 
        h2 ... Details
        a.btn.btn-lg.btn-success(href='/signup') Sign up now!

